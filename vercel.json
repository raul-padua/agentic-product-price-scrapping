{
  "version": 2,
  "builds": [
    { 
      "src": "frontend/package.json", 
      "use": "@vercel/next"
    },
    { 
      "src": "py-backend/app.py", 
      "use": "@vercel/python", 
      "config": { "runtime": "python3.9" } 
    }
  ],
  "routes": [
    { 
      "src": "/py-api/(.*)",
      "dest": "py-backend/app.py"
    },
    { 
      "src": "/(.*)", 
      "dest": "frontend/$1"
    }
  ]
}

